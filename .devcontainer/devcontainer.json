{
    "name": "Python 3 Bot",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    // Ця команда виконається ПІСЛЯ створення контейнера
    "postCreateCommand": "pip install -r requirements.txt",

    // Встановлює розширення VS Code для Python
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}
